<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.zipow.videobox.view.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="15dp"
        android:duplicateParentState="false"
        zoom:zm_cornerRadiusRatio="0.5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.zipow.videobox.view.PListNameRoleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtAnswerName"
                style="@style/ZMTextView.OnLight.Medium.DeepGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zm_status_text_light_dark"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Beatruce Walters"
                />
            <TextView
                android:id="@+id/txtAnswerTime"
                style="@style/ZMTextView.OnLight.Small.Dimmed"
                android:paddingLeft="10dp"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20 AM"
                />
        </com.zipow.videobox.view.PListNameRoleLayout>
        <TextView
            android:id="@+id/txtPrivateAnswer"
            style="@style/ZMTextView.OnLight.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zm_status_text_light_orange"
            android:text="@string/zm_qa_msg_private_answer_41047"
            />
        <TextView
            android:id="@+id/txtAnswer"
            style="@style/ZMTextView.OnLight.Normal"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="If you have a business or premier your customers  online using major  cards (Visa, MasterCard, and American Express) or via PayPal. "
            />
    </LinearLayout>

</LinearLayout>