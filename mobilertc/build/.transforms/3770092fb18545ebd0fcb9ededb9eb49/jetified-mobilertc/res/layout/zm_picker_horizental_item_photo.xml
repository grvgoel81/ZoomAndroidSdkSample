<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <ImageView
		android:padding="1dip"
        android:layout_gravity="center"
        android:id="@+id/iv_photo"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/zm_picker_bottom_photo_size"
        android:background="@drawable/zm_picker_photo_bg"
        android:layout_height="@dimen/zm_picker_bottom_photo_size"
        android:adjustViewBounds="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <View
        android:layout_width="@dimen/zm_picker_bottom_photo_size"
        android:layout_height="@dimen/zm_picker_bottom_photo_size"
        android:id="@+id/cover"
        android:background="@color/zm_half_translucent_white"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="1dip"/>
</FrameLayout>

